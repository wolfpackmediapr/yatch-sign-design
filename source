        <div class="flex mt-8">

            <button v-on:click="previous" v-if="currentStage > firstStage"
            class="inline-block bg-gradient-to-t py-2 px-6 rounded-sm  tracking-widest font-medium cursor-pointer from-mushroom to-beige text-dark-blue-grey">
                Previous
            </button>

            <button v-on:click="next" v-if="currentStage < lastStage"
            class="inline-block bg-gradient-to-t py-2 px-6 rounded-sm  tracking-widest font-medium cursor-pointer from-mushroom to-beige text-dark-blue-grey ml-auto">
                Next
            </button>

            <button v-if="currentStage === lastStage" v-on:click="submitForm"
            class="inline-block bg-gradient-to-t py-2 px-6 rounded-sm  tracking-widest font-medium cursor-pointer from-mushroom to-beige text-dark-blue-grey ml-auto">
                Submit
            </button>

        </div>
    </div>


    <div v-if="submission.success" class="normal-case flex sm:flex-wrap xs:flex-col py-16 justify-center mx-auto items-center text-center sm:px-12">

        <div class="sm:hidden w-3/12">
                            <img class="" src="https://www.dolphin-marine.co.uk/storage/sign-designer-letters.png" alt="sign designer letters">
            
        </div>

        <div class="w-6/12 sm:w-full">

            <div class="flex justify-center p-8">

                <svg xmlns="http://www.w3.org/2000/svg" width="54" height="54" viewBox="0 0 54 54">
                    <g data-name="Group 1978">
                        <g data-name="Ellipse 13" style="stroke:#b6a08a;stroke-width:2px;fill:none">
                            <circle cx="27" cy="27" r="27" style="stroke:none"/>
                            <circle cx="27" cy="27" r="26" style="fill:none"/>
                        </g>
                        <path d="m20.1 38.68-9.569-10.089 1.458-1.51 8.106 8.578L37.073 17.68l1.458 1.51z" transform="translate(2.469 -1.68)" style="fill:#b7a08b"/>
                    </g>
                </svg>

            </div>

            <div class="pb-6 leading-tight text-5xl 2xl:text-5xl xl:text-4xl lg:text-3xl md:text-3xl sm:text-4xl tracking-tight font-normal">
                Thank you! Your Sign Has Been Submitted
            </div>

                            <div class="text-2xl lg:text-xl md:text-l sm:text-l font-light text-dark-blue-grey tracking-tight italic
                "><p>We look forward to working on your project and will be in touch in the next 72 hours</p>
</div>
            
                            <div class="uppercase mt-12 py-4">
                    <a class="bg-gradient-to-t  py-2 px-6 rounded-sm  tracking-widest font-medium xs:block from-mushroom to-beige text-dark-blue-grey"
                    href="/">
                        Return Home
                    </a>
                </div>
                    </div>

        <div class="sm:hidden w-3/12">
                            <img class="" src="https://www.dolphin-marine.co.uk/storage/sign-designer-finishes.png" alt="sign designer finishes">
            
        </div>

    </div>

</div>

<script>

    const signDesigner = new Vue({
    el: '#sign-designer',
    data: {
        classes: {
            current: 'underline',
            inView: 'text-mushroom',
            outOfView: 'text-beige'
        },
        backgrounds: [],
        backgroundsInView: {
            from: 1,
            to: 3
        },
        firstStage: 1,
        lastStage: 4,
        currentStage: 1,
        stages: [
            {
                id: 1,
                title: "Boat Name",
                show: true,
                current: true
            },
            {
                id: 2,
                title: "Sign Style",
                show: false,
                current: false
            },
            {
                id: 3,
                title: "Background",
                show: false,
                current: false
            },
            {
                id: 4,
                title: "Send",
                show: false,
                current: false
            },
        ],
        sign: {
            name: 'Boat Name',
            italic: false,
            bold: false,
            font: "",
            color: '#2196F3',
            finish: null,
            background: null,
            rotate: 0,
            size: 100,
            offset: {
                x: 0,
                y: 0
            },
            userImage: null
        },
        message: {
            name: '',
            email: '',
            phone: '',
            message: '',
            design: '',
            honeypot: '',
        },
        submission: {
            success: false,
            errors: []
        }
    },
    watch: {
        'sign.rotate'(newValue) {
            window.setTranslateUpdateAuto(
                this.sign.offset.x,
                this.sign.offset.y,
                document.querySelector("#drag-text")
            );
        }
    },
    methods: {
        setStage: function(stage) {
            let nextStageKey = stage - 1;
            let nextStageId = stage;

            this.currentStage = nextStageId;
            this.resetCurrent();

            this.stages[nextStageKey].show = true;
            this.stages[nextStageKey].current = true;

            this.customStageHandler();
        },
        next: function() {
            let nextStageKey = this.currentStage;
            let nextStageId = this.currentStage + 1;

            this.currentStage = nextStageId;
            this.resetCurrent();

            this.stages[nextStageKey].show = true;
            this.stages[nextStageKey].current = true;

            this.customStageHandler();
        },
        previous: function() {
            let currentStageKey = this.currentStage - 1;
            let previousStageKey = this.currentStage - 2;
            let previousStageId = this.currentStage - 1;

            this.currentStage = previousStageId;
            this.resetCurrent();

            this.stages[currentStageKey].show = false;
            this.stages[previousStageKey].current = true;

            this.customStageHandler();
        },
        resetCurrent: function() {
            this.stages.forEach(element => {
                element.current = false;
            });
        },
        customStageHandler: function() {
            let app = this;
            if(this.currentStage === 2) {
                setTimeout(function() {
                    window.setColorPickers(app.sign.color);
                }, 50);
            } else if(this.currentStage === 3) {
                setTimeout(function() {
                    window.initDrag();
                }, 50);
            }
        },
        setFinish: function(e) {

            let classes = [
                'border-solid',
                'border-4',
            ];

            this.sign.finish = this.sign.finish === e.target.src ? null : e.target.src;

            let elements = document.getElementsByClassName('sign-finish');

            for (var i = 0; i < elements.length; i++) {
                classes.forEach(function(className) {
                    elements[i].classList.remove(className);
                });
            }

            if(this.sign.finish !== null) {
                classes.forEach(function(className) {
                    e.target.classList.add(className);
                });
            }

        },
        setBackground: function(e) {

            let classes = [
                'border-solid',
                'border-4',
            ];

            this.sign.background = this.sign.background === e.target.src ? null : e.target.src;

            let elements = document.getElementsByClassName('sign-background');

            for (var i = 0; i < elements.length; i++) {
                classes.forEach(function(className) {
                    elements[i].classList.remove(className);
                });
            }

            if(this.sign.background !== null) {
                classes.forEach(function(className) {
                    e.target.classList.add(className);
                });
            }

        },
        nextBackground: function() {
            if(this.backgroundsInView.to < this.backgrounds.length) {
                this.backgroundsInView.from += 1;
                this.backgroundsInView.to += 1;
            } else {
            }
        },
        previousBackground: function() {
            if(this.backgroundsInView.from > 1) {
                this.backgroundsInView.from -= 1;
                this.backgroundsInView.to -= 1;
            }
        },
        submitForm: function() {
            let app = this;
            let form = new FormData();
            form.set('submission_your_name', this.message.name);
            form.set('submission_email', this.message.email);
            form.set('submission_phone', this.message.phone);
            form.set('submission_message', this.message.message);

            form.set('sign_boat_name', this.sign.name);
            form.set('sign_italic', this.sign.italic);
            form.set('sign_bold', this.sign.bold);
            form.set('sign_font', this.sign.font);
            form.set('sign_color', this.sign.color);
            form.set('sign_finish', this.sign.finish);
            form.set('sign_background', this.sign.background);
            form.set('sign_rotate', this.sign.rotate);
            form.set('sign_size', this.sign.size);
            form.set('sign_offset_x', this.sign.offset.x);
            form.set('sign_offset_y', this.sign.offset.y);

            if(this.message.honeypot) {
                form.set('honeypot', this.message.honeypot);
            }

            axios.post('/!/forms/sign_design', form)
            .then(function (response) {
                app.submission.errors = [];
                app.submission.success = true;
            })
            .catch(function (error) {
                app.submission.success = false;
                app.submission.errors = error.response.data.errors;
            });
        },
        openBoatImageUpload: function() {
            document.getElementById('user-provided-boat-image').click();
        },
        handleBoatImageUpload: function(event) {
            let app = this;
            var oFReader = new FileReader(),
            rFilter = /^(?:image\/bmp|image\/cis\-cod|image\/gif|image\/ief|image\/jpeg|image\/jpeg|image\/jpeg|image\/pipeg|image\/png|image\/svg\+xml|image\/tiff|image\/x\-cmu\-raster|image\/x\-cmx|image\/x\-icon|image\/x\-portable\-anymap|image\/x\-portable\-bitmap|image\/x\-portable\-graymap|image\/x\-portable\-pixmap|image\/x\-rgb|image\/x\-xbitmap|image\/x\-xpixmap|image\/x\-xwindowdump)$/i;
            oFReader.onload = function(oFREvent) {
                localStorage.setItem('b', oFREvent.target.result);
                app.sign.background = oFREvent.target.result;
            };
            oFReader.readAsDataURL(event.target.files[0]);

        }
    },
    mounted() {
        let app = this;
        let elements = document.getElementsByClassName('sign-background');
        for (i=0;i<elements.length;i++) {
            app.backgrounds.push({
                id: app.backgrounds.length + 1,
                src: elements[i].getAttribute('data-src'),
                alt: elements[i].getAttribute('data-alt'),
                name: elements[i].getAttribute('data-name')
            });
        }

        if(screen.width < 500) {
            this.backgroundsInView.to = 2;
            this.sign.size = 30;
        } else if(screen.width < 700) {
            this.backgroundsInView.to = 4;
            this.sign.size = 40;
        } else if(screen.width < 950) {
            this.backgroundsInView.to = 5;
        } else if(screen.width < 1200) {
            this.backgroundsInView.to = 6;
        } else if(screen.width < 1400) {
            this.backgroundsInView.to = 7;
        } else if(screen.width < 1700) {
            this.backgroundsInView.to = 9;
        } else {
            this.backgroundsInView.to = 12;
        }

        setTimeout(function() {

            if(!document.querySelector("[data-field='sign_boat_name']")) {
                return;
            }

            window.initDrag();

            app.sign.name = document.querySelector("[data-field='sign_boat_name']").dataset.value;
            app.sign.italic = document.querySelector("[data-field='sign_italic']").dataset.value;
            app.sign.bold = document.querySelector("[data-field='sign_bold']").dataset.value;
            app.sign.font = document.querySelector("[data-field='sign_font']")?.dataset.value;
            app.sign.color = document.querySelector("[data-field='sign_color']").dataset.value;
            app.sign.size = document.querySelector("[data-field='sign_size']").dataset.value;
            app.sign.rotate = document.querySelector("[data-field='sign_rotate']").dataset.value;
            app.sign.offset.x = document.querySelector("[data-field='sign_offset_x']").dataset.value;
            app.sign.offset.y = document.querySelector("[data-field='sign_offset_y']").dataset.value;


            app.sign.finish = document.querySelector("[data-field='sign_finish']").dataset.value === 'null'
            ? null : document.querySelector("[data-field='sign_finish']").dataset.value;
            app.sign.background = document.querySelector("[data-field='sign_background']").dataset.value === 'null'
            ? null : document.querySelector("[data-field='sign_background']").dataset.value;

            setTimeout(function() {
                window.setTranslateUpdateAuto(
                    app.sign.offset.x,
                    app.sign.offset.y,
                    document.querySelector("#drag-text")
                    );
            }, 50);

        }, 100);
    }
})
</script>


    

    <div class="component  flex flex-wrap bg-dark-blue-grey text-mushroom py-16 md:flex-wrap-reverse justify-center">

    <div class="flex w-1/2 md:w-full pl-16 md:pl-0 justify-center">

                    <img class="w-full max-w-xl" src="https://www.dolphin-marine.co.uk/storage/dolphin-marine-location.png" alt="dolphin marine location">
        

