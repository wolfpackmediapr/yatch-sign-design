<script>
    const vueHeader = new Vue({
      el: '#header',
      data: {
          openMenu: null,
          openMobileMenu: false
      },
      methods: {
          toggle(id) {

            let allItems = document.querySelectorAll("[data-menu-id]")

            for (let i = 0; i < allItems.length; i++) {
                allItems[i].classList.remove('block');
                allItems[i].classList.add('hidden');
            }

            if(id === this.openMenu) {

                this.openMenu = null;

            } else {

                let selectedElement = document.querySelectorAll("[data-menu-id='" + id + "']")[0]

                selectedElement.classList.remove('hidden');
                selectedElement.classList.add('block');

                this.openMenu = id;

            }


          },
          toggleMobileMenu() {
            this.openMobileMenu = !this.openMobileMenu;
          }
      },
      mounted() {

      }
    })
</script>


    
